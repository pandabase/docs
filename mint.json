    {
      "group": "The Guide",
      "pages": [
        "guides/stores",
        "guides/products",
        "guides/orders",
        "guides/payments",
        "guides/radar",
        "guides/team",
        "guides/fees"
      ]
    },
    {
      "group": "Basics",
      "pages": [
        "developers/introduction",
        "developers/pagination",
        "developers/rate-limits",
        "developers/idempotency",
        "developers/errors",
        "developers/changelog"
      ]
