      "pages": [
        {
          "group": "Public API",
          "pages": [
            "developers/api-reference/public/retrieve-shop",
            "developers/api-reference/public/get-available-categories",
            "developers/api-reference/public/list-shop-products",
            "developers/api-reference/public/retrieve-product",
            "developers/api-reference/public/retrieve-reviews",
            "developers/api-reference/public/search-shop"
          ]
        }
      ]
