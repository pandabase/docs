{
  "openapi": "3.0.0",
  "info": {
    "title": "Pandabase API",
    "version": "3.0.0",
    "description": "The Pandabase API allows you to programmatically interact with your Pandabase resources. All API responses follow a consistent format with an `ok` field indicating success or failure.",
    "contact": {
      "name": "Pandabase Support",
      "url": "https://pandabase.io"
    }
  },
  "servers": [
    {
      "url": "https://pandabase.io/api",
      "description": "Production API"
    },
    {
      "url": "https://pandabase.io/api/preview",
      "description": "Preview Features"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "sk_v3_xxx",
        "description": "V3 API key authentication. Format: `sk_v3_xxxxx`"
      }
    },
    "parameters": {
      "StorefrontId": {
        "name": "X-Storefront-Id",
        "in": "header",
        "required": true,
        "schema": {
          "type": "string"
        },
        "description": "Your storefront/shop ID"
      }
    },
    "schemas": {
      "SuccessResponse": {
        "type": "object",
        "properties": {
          "ok": {
            "type": "boolean",
            "example": true,
            "description": "Always true for successful requests"
          },
          "data": {
            "type": "object",
            "description": "The requested resource or response data"
          }
        },
        "required": ["ok", "data"]
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "ok": {
            "type": "boolean",
            "example": false,
            "description": "Always false for failed requests"
          },
          "error": {
            "type": "object",
            "properties": {
              "code": {
                "type": "string",
                "example": "invalid_request",
                "description": "Machine-readable error code"
              },
              "message": {
                "type": "string",
                "example": "The request was malformed or missing required parameters",
                "description": "Human-readable error message"
              }
            },
            "required": ["code", "message"]
          }
        },
        "required": ["ok", "error"]
      },
      "Payment": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "pmnt_1234567890"
          },
          "amount": {
            "type": "integer",
            "example": 1000,
            "description": "Amount in cents"
          },
          "currency": {
            "type": "string",
            "example": "USD"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "processing", "succeeded", "failed", "canceled"],
            "example": "succeeded"
          },
          "description": {
            "type": "string",
            "example": "Premium Plan"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "example": "2024-12-25T10:00:00Z"
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "prod_abc123"
          },
          "name": {
            "type": "string",
            "example": "Premium Plan"
          },
          "price": {
            "type": "integer",
            "example": 2999,
            "description": "Price in cents"
          },
          "currency": {
            "type": "string",
            "example": "USD"
          },
          "description": {
            "type": "string"
          },
          "images": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "hash": {
                  "type": "string"
                },
                "path": {
                  "type": "string"
                },
                "preview_url": {
                  "type": "string"
                },
                "resolution": {
                  "type": "string"
                }
              }
            }
          },
          "categories": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "ord_xyz789"
          },
          "amount": {
            "type": "integer",
            "example": 2999
          },
          "currency": {
            "type": "string",
            "example": "USD"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "completed", "canceled", "refunded"]
          },
          "customer": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "email": {
                "type": "string",
                "format": "email"
              }
            }
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Coupon": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "cpn_def456"
          },
          "code": {
            "type": "string",
            "example": "SAVE20"
          },
          "type": {
            "type": "string",
            "enum": ["percentage", "fixed"]
          },
          "value": {
            "type": "integer",
            "example": 20
          },
          "enabled": {
            "type": "boolean",
            "example": true
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "License": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "lic_abc123"
          },
          "key": {
            "type": "string",
            "example": "XXXX-XXXX-XXXX-XXXX"
          },
          "product_id": {
            "type": "string",
            "example": "prod_xyz789"
          },
          "status": {
            "type": "string",
            "enum": ["active", "suspended", "expired", "revoked"],
            "example": "active"
          },
          "customer_id": {
            "type": "string",
            "example": "cust_123456"
          },
          "metadata": {
            "type": "object",
            "additionalProperties": true,
            "description": "Custom metadata associated with the license"
          },
          "expires_at": {
            "type": "string",
            "format": "date-time",
            "nullable": true,
            "example": "2025-12-31T23:59:59Z"
          },
          "activated_at": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    },
    "responses": {
      "UnauthorizedError": {
        "description": "Authentication failed",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            },
            "example": {
              "ok": false,
              "error": {
                "code": "invalid_api_key",
                "message": "The provided API key is invalid or expired"
              }
            }
          }
        }
      },
      "NotFoundError": {
        "description": "Resource not found",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            },
            "example": {
              "ok": false,
              "error": {
                "code": "not_found",
                "message": "The requested resource could not be found"
              }
            }
          }
        }
      },
      "RateLimitError": {
        "description": "Rate limit exceeded",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            },
            "example": {
              "ok": false,
              "error": {
                "code": "rate_limit_exceeded",
                "message": "Rate limit exceeded. Please retry after the reset time."
              }
            }
          }
        }
      },
      "ValidationError": {
        "description": "Validation failed",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            },
            "example": {
              "ok": false,
              "error": {
                "code": "validation_error",
                "message": "The 'amount' field is required and must be a positive integer"
              }
            }
          }
        }
      }
    }
  },
  "paths": {
    "/payments": {
      "post": {
        "summary": "Create a payment",
        "description": "Create a new payment intent for a customer",
        "operationId": "createPayment",
        "tags": ["Payments"],
        "parameters": [
          {
            "$ref": "#/components/parameters/StorefrontId"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["amount", "currency"],
                "properties": {
                  "amount": {
                    "type": "integer",
                    "description": "Amount in cents",
                    "example": 1000
                  },
                  "currency": {
                    "type": "string",
                    "description": "Three-letter currency code",
                    "example": "USD"
                  },
                  "description": {
                    "type": "string",
                    "example": "Premium Plan"
                  },
                  "display_ui": {
                    "type": "object",
                    "properties": {
                      "fields": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "type": {
                              "type": "string",
                              "example": "input"
                            },
                            "name": {
                              "type": "string",
                              "example": "username"
                            },
                            "display_name": {
                              "type": "string",
                              "example": "Your Username"
                            }
                          }
                        }
                      }
                    }
                  },
                  "return_url": {
                    "type": "string",
                    "format": "uri",
                    "example": "https://your-site.com/success"
                  },
                  "cancel_url": {
                    "type": "string",
                    "format": "uri",
                    "example": "https://your-site.com/cancel"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Payment created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "example": "pmnt_1234567890"
                        },
                        "checkout_url": {
                          "type": "string",
                          "example": "https://pandabase.io/checkout/pmnt_xxx"
                        },
                        "amount": {
                          "type": "integer",
                          "example": 1000
                        },
                        "currency": {
                          "type": "string",
                          "example": "USD"
                        },
                        "status": {
                          "type": "string",
                          "example": "pending"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "422": {
            "$ref": "#/components/responses/ValidationError"
          },
          "429": {
            "$ref": "#/components/responses/RateLimitError"
          }
        }
      },
      "get": {
        "summary": "List payments",
        "description": "Retrieve a list of payments",
        "operationId": "listPayments",
        "tags": ["Payments"],
        "parameters": [
          {
            "$ref": "#/components/parameters/StorefrontId"
          },
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "page_size",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 10,
              "maximum": 100
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Payments retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "payments": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/Payment"
                          }
                        },
                        "meta": {
                          "type": "object",
                          "properties": {
                            "page": {
                              "type": "integer",
                              "example": 1
                            },
                            "page_size": {
                              "type": "integer",
                              "example": 10
                            },
                            "total": {
                              "type": "integer",
                              "example": 45
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "429": {
            "$ref": "#/components/responses/RateLimitError"
          }
        }
      }
    },
