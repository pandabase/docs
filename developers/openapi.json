                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Premium Plan"
                  },
                  "price": {
                    "type": "integer",
                    "example": 2999
                  },
                  "currency": {
                    "type": "string",
                    "example": "USD"
                  },
                  "description": {
                    "type": "string"
                  },
                  "categories": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Product created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "$ref": "#/components/schemas/Product"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
